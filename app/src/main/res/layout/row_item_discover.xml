<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="discoverAdapter"
            type="com.itsupportwale.dastaan.adapters.DiscoverAdapter" />
    </data>

    <LinearLayout
        android:id="@+id/parentPanel"
        android:background="@drawable/black_capsule_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dim_10_dp"
        android:paddingVertical="@dimen/dim_10_dp"
        android:paddingHorizontal="@dimen/dim_15_dp"

        android:gravity="center"

        >

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:text="Latest"
            android:lines="1"
            android:textSize="@dimen/text_size_14sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:text="0"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dim_5_dp"
            />
    </LinearLayout>
</layout>