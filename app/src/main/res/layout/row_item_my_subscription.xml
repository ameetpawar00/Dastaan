<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mySubscriptionAdapter"
            type="com.itsupportwale.dastaan.adapters.MySubscriptionAdapter" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim_20_dp"
        android:background="@color/white"
        android:elevation="@dimen/dim_10_dp"
        android:layout_marginVertical="@dimen/dim_5_dp"
        android:layout_marginStart="@dimen/dim_10_dp"
        >
        <RelativeLayout
            android:id="@+id/parentPanel"
            android:layout_width="@dimen/dim_150_dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/model_1"
                android:contentDescription="@null"/>
            <RelativeLayout
                android:background="@color/black_hue"
                android:padding="@dimen/dim_10_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_above="@+id/thisWriter"
                    android:id="@+id/thisTitleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_18sp"
                    android:fontFamily="@font/louis_george_cafe"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:id="@+id/thisWriter"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_centerVertical="true"
                        android:id="@+id/roundCardView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:layout_alignParentStart="true"
                        android:elevation="0dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/writerImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/profile_icon" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/roundCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/thisWriterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/text_size_12sp"
                            android:fontFamily="@font/montserrat_bold"
                            />

                        <TextView
                            android:id="@+id/thisTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="5 Min Ago"
                            android:textSize="@dimen/text_size_12sp"
                            android:fontFamily="@font/montserrat_medium"
                            />
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>