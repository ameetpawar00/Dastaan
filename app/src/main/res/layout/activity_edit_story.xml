<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="editStoryActivity"
            type="com.itsupportwale.dastaan.activity.EditStoryActivity" />
    </data>
    <LinearLayout
        android:background="@color/theme_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            android:id="@+id/topNavBar"
            layout="@layout/top_nav_bar_view"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:padding="@dimen/dim_20_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/story_title"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    />
                <EditText
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:background="@drawable/edit_back_capsule"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@drawable/color_cursor_dark"
                    android:id="@+id/storyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/story_title"
                    android:inputType="text"
                    android:padding="@dimen/dim_15_dp"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/story_genre"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:background="@drawable/edit_back_capsule"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@drawable/color_cursor_dark"
                    android:id="@+id/storyGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_story_genre"
                    android:padding="@dimen/dim_15_dp"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/story_content"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    />
                <EditText
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:background="@drawable/edit_back_capsule"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@drawable/color_cursor_dark"
                    android:id="@+id/storyContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/story_content"
                    android:padding="@dimen/dim_15_dp"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/story_tags_tags"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    />
                <EditText
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:background="@drawable/edit_back_capsule"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@drawable/color_cursor_dark"
                    android:id="@+id/storyTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/story_tags_tags"
                    android:inputType="text"
                    android:padding="@dimen/dim_15_dp"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/photos"
                    android:textColor="@color/colorHeadings"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    />
                <LinearLayout
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageFeatured"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imagepicker_image_placeholder" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/uploadPhotoBtn"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/white"
                        android:text="@string/upload_photo"
                        android:textAllCaps="true"
                        android:paddingHorizontal="@dimen/dim_20_dp"
                        android:layout_marginBottom="@dimen/dim_20_dp"
                        android:paddingVertical="@dimen/dim_10_dp"
                        android:background="@drawable/blue_capsule"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/louis_george_cafe_bold"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/updateBtn"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/update"
                    android:textAllCaps="true"
                    android:layout_marginBottom="@dimen/dim_10_dp"
                    android:paddingVertical="@dimen/dim_10_dp"
                    android:layout_marginHorizontal="@dimen/dim_80_dp"
                    android:background="@drawable/blue_capsule"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>