<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginActivity"
            type="com.itsupportwale.dastaan.activity.LoginActivity" />
    </data>

    <LinearLayout
        android:id="@+id/layoutBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dim_20_dp"
        android:paddingVertical="@dimen/dim_30_dp"
        >

        <RelativeLayout
            android:id="@+id/thisTitle2"
            android:layout_width="match_parent"
            android:padding="@dimen/dim_10_dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/louis_george_cafe_bold"
                android:text="@string/forget_password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_18sp"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:fontFamily="@font/louis_george_cafe_bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/cancelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="@dimen/text_size_12sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginVertical="@dimen/dim_20_dp"
            android:paddingHorizontal="@dimen/dim_10_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dim_30_dp"
            android:background="@drawable/edit_back_capsule"
            android:layout_marginBottom="@dimen/dim_20_dp"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dim_20_dp"
                android:layout_height="@dimen/dim_20_dp"
                android:src="@drawable/mail_icon"
                />
            <EditText
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:textCursorDrawable="@drawable/color_cursor_dark"
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dim_15_dp"
                android:textColorHint="@color/black_overlay"
                android:textSize="14sp"
                android:textColor="@color/colorHeadings"
                android:fontFamily="@font/louis_george_cafe_bold"
                android:imeOptions="actionNext"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/submitBtn"
            android:gravity="center"
            android:textSize="@dimen/text_size_16sp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/dim_10_dp"
            android:paddingVertical="@dimen/dim_15_dp"
            android:layout_marginHorizontal="@dimen/dim_80_dp"
            android:background="@drawable/blue_capsule"
            android:layout_height="wrap_content"
            android:fontFamily="@font/louis_george_cafe_bold"
            />
    </LinearLayout>
</layout>