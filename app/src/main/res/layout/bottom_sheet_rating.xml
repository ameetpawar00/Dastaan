<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:background="@drawable/custom_top_curve_bg"
    android:orientation="vertical"
    app:behavior_peekHeight="400dp">

    <LinearLayout
        android:id="@+id/childListParentRelLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:baselineAligned="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/userNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/louis_george_cafe_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp" />

            <ImageView
                android:id="@+id/cancelImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@drawable/close_icon" />


        </RelativeLayout>


        <com.itsupportwale.dastaan.utility.CustomRatingBar
            android:id="@+id/thisRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:halfStars="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:maxStars="5"
            app:starPadding="4dp" />

        <TextView
            android:id="@+id/thisReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/louis_george_cafe_bold"
            android:text="@string/review"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/commentEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="start|center"
            android:background="@drawable/edit_search_background"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="top|start"
            android:hint="@string/review"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="8"
            android:maxLength="200"
            android:minLines="1"
            android:textColor="@color/color_121212"
            android:textColorHint="#727272"
            android:textSize="@dimen/text_size_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/submitTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_btn_green_bg"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:paddingVertical="10dp"
            android:text="@string/submit"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>