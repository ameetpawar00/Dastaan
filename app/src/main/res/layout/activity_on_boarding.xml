<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="splashscreenActivity"
            type="com.itsupportwale.dastaan.activity.OnBoardingActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OnBoardingActivity">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pagerIntroduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/btnGetStartedLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim_20_dp"
                >
                <TextView
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/skip"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:text="@string/skip"
                    android:layout_marginStart="@dimen/dim_20_dp"
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/colorHeadings"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textFontWeight="700"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/viewPagerCountDots"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pager_height"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" />
                <TextView
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:layout_marginEnd="@dimen/dim_20_dp"
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textFontWeight="700"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />
                <TextView
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:text="@string/finish"
                    android:layout_marginEnd="@dimen/dim_20_dp"
                    android:layout_marginBottom="@dimen/dim_20_dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textFontWeight="700"
                    android:fontFamily="@font/louis_george_cafe_bold"
                    />
            </RelativeLayout>
    </RelativeLayout>
</layout>
