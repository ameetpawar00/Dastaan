<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="storyAdapter"
            type="com.itsupportwale.dastaan.adapters.StoryAdapter" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim_30_dp"
        android:background="@color/white"
        android:elevation="@dimen/dim_10_dp"
        android:layout_marginHorizontal="@dimen/dim_10_dp"
        android:layout_marginBottom="@dimen/dim_10_dp"
        >
        <RelativeLayout
            android:id="@+id/parentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/bookmarkedNot"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dim_20_dp"
                android:layout_width="@dimen/dim_40_dp"
                android:layout_height="@dimen/dim_40_dp"
                android:src="@drawable/ic_baseline_bookmark_border_24"
                android:scaleType="fitXY"
                android:layout_marginTop="-5dp"
                android:visibility="gone"
                android:contentDescription="@null"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/bookmarked"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dim_20_dp"
                android:layout_width="@dimen/dim_40_dp"
                android:layout_height="@dimen/dim_40_dp"
                android:src="@drawable/ic_outline_bookmark_24"
                android:scaleType="fitXY"
                android:layout_marginTop="-5dp"
                android:contentDescription="@null"/>
            <RelativeLayout
                android:id="@+id/thisWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dim_20_dp"
                    android:background="@color/white"
                    android:elevation="@dimen/dim_10_dp"
                    android:id="@+id/roundCardView"
                    android:layout_margin="@dimen/dim_10_dp"
                    >
                    <RelativeLayout
                        android:layout_width="@dimen/dim_100_dp"
                        android:layout_height="130dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        >
                    <ImageView
                        android:id="@+id/bannerImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/model_1"
                        android:contentDescription="@null"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:background="@drawable/black_capsule"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/ratingLinLay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dim_10_dp"
                            android:paddingVertical="@dimen/dim_5_dp"
                            android:layout_marginVertical="@dimen/dim_10_dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dim_15_dp"
                                android:layout_height="@dimen/dim_15_dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/dim_5_dp"
                                android:src="@drawable/filled" />

                            <TextView
                                android:id="@+id/ratingTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:maxLines="1"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_margin="@dimen/dim_10_dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/roundCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/storyTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/louis_george_cafe"
                        />
                    <TextView
                        android:id="@+id/thisTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_16sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginVertical="@dimen/dim_10_dp"
                        />

                    <TextView
                        android:id="@+id/thisWriterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/louis_george_cafe"
                        />
                    <LinearLayout
                        android:layout_marginVertical="@dimen/dim_10_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/storyDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/text_size_12sp"
                            android:fontFamily="@font/louis_george_cafe"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text=" . "
                            android:textSize="@dimen/text_size_12sp"
                            android:fontFamily="@font/montserrat_bold"
                            />
                        <TextView
                        android:id="@+id/storyReads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_12sp"
                        android:fontFamily="@font/louis_george_cafe"
                        />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>