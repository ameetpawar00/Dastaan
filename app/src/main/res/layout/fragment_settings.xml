<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="settingsFragment"
            type="com.itsupportwale.dastaan.fragment.SettingsFragment" />
    </data>

    <LinearLayout
        android:paddingTop="@dimen/dim_50_dp"
        android:background="@color/theme_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/dim_20_dp"
                    app:contentPadding="@dimen/dim_20_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/text_size_10sp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_marginVertical="@dimen/dim_10_dp"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/colorHeadings"
                            android:fontFamily="@font/louis_george_cafe_bold"
                            android:textSize="@dimen/text_size_14sp"
                            />
                        <TextView
                            android:layout_marginVertical="@dimen/dim_10_dp"

                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faq_s"
                            android:textColor="@color/colorHeadings"
                            android:fontFamily="@font/louis_george_cafe_bold"
                            android:textSize="@dimen/text_size_14sp"
                            />
                        <TextView
                            android:layout_marginVertical="@dimen/dim_10_dp"

                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_support"
                            android:textColor="@color/colorHeadings"
                            android:fontFamily="@font/louis_george_cafe_bold"
                            android:textSize="@dimen/text_size_14sp"
                            />

                        <TextView
                            android:id="@+id/logoutBtn"
                            android:layout_marginVertical="@dimen/dim_10_dp"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textColor="@color/red_blood"
                            android:fontFamily="@font/louis_george_cafe_bold"
                            android:textSize="@dimen/text_size_14sp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>